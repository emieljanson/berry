[Unit]
Description=Berry Music Player
After=network-online.target berry-librespot.service
Wants=network-online.target
Requires=berry-librespot.service

[Service]
Type=simple
User=admin
WorkingDirectory=/home/admin/berry
ExecStart=/home/admin/berry/venv/bin/python berry.py --fullscreen
Restart=always
RestartSec=5
Environment=HOME=/home/admin
Environment=XDG_RUNTIME_DIR=/run/user/1000

[Install]
WantedBy=multi-user.target
